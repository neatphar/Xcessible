<body style="overflow: hidden;">
  <header id="header" style="overflow: hidden;">
    <div class="d-flex flex-column" style="height: 100%;margin-top: 50%;">
      <nav class="nav-menu" style="height: 100%;margin-left: -15px;">
      </nav>
    </div>
  </header>

  <main id="main">
    <section id="first_section" class="skills" style="background: linear-gradient(0deg, rgba(16,22,31,0.2) 0%, rgba(255,255,255,1) 100%);">
      <div class="container">
        <div class="section-title">
          <h2>UPDATE A JOB SECTION</h2>
        </div>
        
        <div class="row skills-content">
          <form action="" method="POST" class="log-in" autocomplete="off"> 
          
            <div class="floating-label">
              <input required placeholder="Title" name="Title" type="text" autocomplete="off" value="<%= job.Title %>">
              <label for="Title">Title:</label>
            </div>
            <div style="width: 100%; display: flex;">
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Employer" name="Employer" type="text"  autocomplete="off" value="<%= job.Employer %>">
                <label for="Employer">Employer:</label>
              </div>
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Type" name="Type" type="text"  autocomplete="off" value="<%= job.Type %>">
                <label for="Type">Type:</label>
              </div>
            </div>
            <div style="width: 100%; display: flex;">
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Location" name="Location" type="text"  autocomplete="off" value="<%= job.Location %>">
                <label for="Location">Location:</label>
              </div>
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Date of Start" name="Timestamp" type="date" autocomplete="off" value="<%= job.Timestamp.toISOString().substr(0, 10) %>">
                <label for="Timestamp">Date of Start:</label>
              </div>
            </div>
            <div style="width: 100%; display: flex;">
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Pay" name="Pay" type="text"  autocomplete="off" value="<%= job.Pay %>">
                <label for="Pay">Pay:</label>
              </div>
              <div class="floating-label" style="width: 50%;">
                <input required placeholder="Tag" name="Tag" type="text"  autocomplete="off" value="<%= job.Tag %>">
                <label for="Tag">Tag:</label>
              </div>
            </div>
            <div class="floating-label">
              <input required placeholder="Icon Link" name="IconLink" type="text"  autocomplete="off" value="<%= job.IconLink %>">
              <label for="IconLink">Icon Link:</label>
            </div>

            <div class="floating-label">
              <textarea class="text" cols="86" rows ="20" name="Content" placeholder="Content" required><%= job.Content %></textarea>
              <label for="Content" style="top: calc(50% - 59px);">Content:</label>
            </div>

            <button type="submit">UPDATE</button>
          </form>
          <form action="" method="POST" class="log-in" autocomplete="off" style="padding: 0; margin-right: 165px; margin-top: -130px;"> 
                  <input type="text" name="type" id="type" hidden="" value="delete">
                  <button class="delete-button" type="submit" style="color: #CA0B00;border: 4px #CA0B00 solid;">DELETE</button>
          </form>
        </div>
      </div>
    </section>
    
    <section id="second_section" class="portfolio " style="background: linear-gradient(0deg, rgba(16,22,31,0.4) 0%, rgba(16,22,31,0.2) 100%);">
      <div class="container">
        <div class="section-title">

        </div>
        
        <div class="row skills-content">
         
        </div>
      </div>
    </section>
    

    
  </main>

